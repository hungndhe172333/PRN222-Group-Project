@{
    ViewData["Title"] = "Xác thực OTP";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Account" asp-action="VerifyOtp" method="post">
    <input type="hidden" name="email" value="@ViewBag.Email" />

    <div class="form-group">
        <label>Nhập mã OTP:</label>
        <input type="text" name="otp" class="form-control" required maxlength="6" />
    </div>

    <button type="submit" class="btn btn-success">Xác nhận</button>

    @if (ViewBag.Error != null)
    {
        <p class="text-danger">@ViewBag.Error</p>
    }
</form>

<!-- Gửi lại OTP -->
<form asp-controller="Account" asp-action="ResendOtp" method="post">
    <input type="hidden" name="email" value="@ViewBag.Email" />
    <button type="submit" class="btn btn-warning mt-2">Gửi lại OTP</button>
</form>

