@page
@model _14_GroupProject_PRN222_SE1810.Pages.LoginModel
@{

	ViewData["Title"] = "Đăng nhập";
}
<h2>Đăng nhập</h2>

<form method="post">
    <div>
        <label>Email</label>
        <input type="email" asp-for="Email" required />
    </div>
    <div>
        <label>Password</label>
        <input type="password" asp-for="Password" required />
    </div>
    <div>
        <input type="checkbox" asp-for="RememberMe" />
        <label asp-for="RememberMe">Ghi nhớ đăng nhập</label>
    </div>

    <button type="submit">Đăng nhập</button>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p style="color: red;">@Model.Message</p>
}
