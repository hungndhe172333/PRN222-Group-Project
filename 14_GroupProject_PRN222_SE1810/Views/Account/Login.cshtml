@page
@model LoginModel
@{

	ViewData["Title"] = "Đăng nhập";
}
<h2>Đăng nhập</h2>

<form method="post">
    <div>
        <label>Email</label>
        <input type="email" asp-for="Email" required />
    </div>
    <div>
        <label>Password</label>
        <input type="password" asp-for="Password" required />
    </div>
    <div>
        <input type="checkbox" asp-for="RememberMe" />
        <label asp-for="RememberMe">Ghi nhớ đăng nhập</label>
    </div>

    <button type="submit">Đăng nhập</button>
    <button type="">Đăng ký</button>
</form>

<a asp-page="/ForgotPassword" class="button">Quên mật khẩu?</a>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p style="color: red;">@Model.Message</p>
}
