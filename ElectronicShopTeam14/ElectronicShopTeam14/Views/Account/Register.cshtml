@model ElectronicShopTeam14.Models.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Electronic Shop - Register</title>

    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body class="bg-gradient-primary">
    <div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Tạo tài khoản mới!</h1>
                            </div>

                            @if (!ViewData.ModelState.IsValid)
                            {
                                        <div class="alert alert-danger">
                                    @Html.ValidationSummary(false)
                                        </div>
                            }

                            <form class="user" asp-controller="Account" asp-action="Register" method="post">
                                <div class="form-group row">
                                    <div class="col-sm-12">
                                        <input type="text" class="form-control form-control-user" 
                                               asp-for="UserName" placeholder="Tên người dùng">
                                        <span asp-validation-for="UserName" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-user" 
                                           asp-for="Email" placeholder="Địa chỉ Email">
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="password" class="form-control form-control-user"
                                               asp-for="Password" placeholder="Mật khẩu">
                                        <span asp-validation-for="Password" class="text-danger small"></span>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="password" class="form-control form-control-user"
                                               asp-for="ConfirmPassword" placeholder="Nhập lại mật khẩu">
                                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="tel" class="form-control form-control-user"
                                           asp-for="PhoneNumber" placeholder="Số điện thoại">
                                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-user"
                                           asp-for="Address" placeholder="Địa chỉ">
                                </div>
                                <div class="form-group">
                                    <input type="date" class="form-control form-control-user"
                                           asp-for="DateOfBirth">
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Đăng ký tài khoản
                                </button>
                                <hr>
                                <a href="@Url.Action("ExternalLogin", "Account", new { provider = "Google" })" 
                                   class="btn btn-google btn-user btn-block">
                                    <i class="fab fa-google fa-fw"></i> Đăng ký với Google
                                </a>
                                <a href="@Url.Action("ExternalLogin", "Account", new { provider = "Facebook" })" 
                                   class="btn btn-facebook btn-user btn-block">
                                    <i class="fab fa-facebook-f fa-fw"></i> Đăng ký với Facebook
                                </a>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" asp-controller="Account" asp-action="ForgotPassword">Quên mật khẩu?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" asp-controller="Account" asp-action="Login">Đã có tài khoản? Đăng nhập!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>

    <!-- Validation scripts -->
    <partial name="_ValidationScriptsPartial" />
</body>
</html>