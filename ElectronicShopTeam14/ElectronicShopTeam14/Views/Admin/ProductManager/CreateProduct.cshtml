                                <div class="col-xl-9 col-lg-8 mx-auto">
                                    <form asp-action="CreateProduct" method="post" enctype="multipart/form-data">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                        <div class="card mb-4">
                                            <div class="card-header">
                                                <h4 class="card-title">Add Product Photo</h4>
                                            </div>
                                            <div class="card-body">
                                                <div class="mb-3">
                                                    <label asp-for="ImageFile" class="form-label">Product Image</label>
                                                    <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                                                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                                                    <span class="text-muted fs-13">
                                                        1600 x 1200 (4:3) recommended. PNG, JPG and GIF files are allowed
                                                    </span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="card mb-4">
                                            <div class="card-header">
                                                <h4 class="card-title">Product Information</h4>
                                            </div>
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <div class="mb-3">
                                                            <label asp-for="ProductId" class="form-label">Product ID</label>
                                                            <input asp-for="ProductId" class="form-control" placeholder="Product ID" />
                                                            <span asp-validation-for="ProductId" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="mb-3">
                                                            <label asp-for="ProductName" class="form-label">Product Name</label>
                                                            <input asp-for="ProductName" class="form-control" placeholder="Product Name" />
                                                            <span asp-validation-for="ProductName" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <div class="mb-3">
                                                            <label asp-for="CategoryId" class="form-label">Product Category</label>
                                                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                                                                <option value="">-- Select Category --</option>
                                                            </select>
                                                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="mb-3">
                                                            <label class="form-label">Brand</label>
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <select asp-for="BrandId" class="form-control" asp-items="ViewBag.Brands">
                                                                        <option value="">-- Select Brand --</option>
                                                                    </select>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <input asp-for="BrandName" class="form-control" placeholder="Or add new brand" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row mb-4">
                                                    <div class="col-lg-6">
                                                        <div class="mt-3">
                                                            <h5 class="text-dark fw-medium">Sizes:</h5>
                                                            <div class="d-flex flex-wrap gap-2">
                                                                @foreach (var size in ViewBag.Sizes)
                                                                {
                                                                    <div class="form-check">
                                                                        <input type="checkbox" name="SelectedSizes" value="@size" class="form-check-input" id="size-@size">
                                                                        <label class="form-check-label" for="size-@size">@size</label>
                                                                    </div>
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="mt-3">
                                                            <h5 class="text-dark fw-medium">Colors:</h5>
                                                            <div class="d-flex flex-wrap gap-2">
                                                                @foreach (var color in ViewBag.Colors)
                                                                {
                                                                    <div class="form-check">
                                                                        <input type="checkbox" name="SelectedColors" value="@color" class="form-check-input" id="color-@color">
                                                                        <label class="form-check-label" for="color-@color">@color</label>
                                                                    </div>
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="mb-3">
                                                            <label asp-for="ProductDescribe" class="form-label">Description</label>
                                                            <textarea asp-for="ProductDescribe" class="form-control" rows="5" placeholder="Product description"></textarea>
                                                            <span asp-validation-for="ProductDescribe" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-lg-4">
                                                        <div class="mb-3">
                                                            <label asp-for="ModelNumber" class="form-label">Model Number</label>
                                                            <input asp-for="ModelNumber" class="form-control" placeholder="Model Number" />
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-4">
                                                        <div class="mb-3">
                                                            <label asp-for="Quantity" class="form-label">Stock</label>
                                                            <input asp-for="Quantity" type="number" class="form-control" placeholder="Quantity" />
                                                            <span asp-validation-for="Quantity" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-4">
                                                        <div class="mb-3">
                                                            <label asp-for="WarrantyMonths" class="form-label">Warranty (Months)</label>
                                                            <input asp-for="WarrantyMonths" type="number" class="form-control" placeholder="Warranty Period" />
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="mb-3">
                                                            <label asp-for="TechnicalSpecs" class="form-label">Technical Specifications</label>
                                                            <textarea asp-for="TechnicalSpecs" class="form-control" rows="3" placeholder="Technical specifications"></textarea>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="card mb-4">
                                            <div class="card-header">
                                                <h4 class="card-title">Pricing Details</h4>
                                            </div>
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <div class="mb-3">
                                                            <label asp-for="ProductPrice" class="form-label">Price</label>
                                                            <div class="input-group">
                                                                <span class="input-group-text">$</span>
                                                                <input asp-for="ProductPrice" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                                            </div>
                                                            <span asp-validation-for="ProductPrice" class="text-danger"></span>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                        <div class="card mb-4">
                                            <div class="card-header">
                                                <h4 class="card-title">Product Status</h4>
                                            </div>
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <div class="mb-3">
                                                            <label asp-for="Active" class="form-label">Active Status</label>
                                                            <select asp-for="Active" class="form-control">
                                                                <option value="Yes">Yes</option>
                                                                <option value="No">No</option>
                                                            </select>
                                                            <span asp-validation-for="Active" class="text-danger"></span>
                                                            <span class="text-muted fs-13">
                                                                Set to "Yes" for products that should be visible in the shop
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="p-3 bg-light mb-3 rounded">
                                            <div class="row justify-content-end g-2">
                                                <div class="col-lg-2">
                                                    <a asp-action="Index" class="btn btn-outline-secondary w-100">Cancel</a>
                                                </div>
                                                <div class="col-lg-2">
                                                    <button type="submit" class="btn btn-primary w-100">Create Product</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

